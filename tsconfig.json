{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", 
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
    },
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
